<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <routeContext id="eventRoutes" xmlns="http://camel.apache.org/schema/spring">
        <route id="alfresco.events -> queue:alfresco.repo.events">
            <from uri="direct-vm:alfresco.events" />
            <marshal><custom ref="defaultDataFormat"/></marshal>
            <!-- TODO: Would like to use ${alfresco.events.uri} here but endpoints don't work in routeContext, only camelContext -->
            <to uri="amqp:queue:alfresco.repo.events?jmsMessageType=Text" />
        </route>
    </routeContext>
</beans>